<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_color"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="-15dp"
        android:backgroundTint="@color/cardiev_color"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnnull"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:stateListAnimator="@null"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/btn_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn1"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btncix"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/btn_color"
                android:onClick="operator"
                android:text="-"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btntop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn6"
                app:layout_constraintTop_toBottomOf="@+id/btnvur" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:textColor="@color/text_color"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn0"
                app:layout_constraintEnd_toStartOf="@+id/btn3"
                app:layout_constraintStart_toEndOf="@+id/btn1"
                app:layout_constraintTop_toBottomOf="@+id/btn5" />

            <Button
                android:id="@+id/btnfaiz"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:text="%"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn9"
                app:layout_constraintEnd_toStartOf="@+id/btnbol"
                app:layout_constraintStart_toEndOf="@+id/btnabc"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="35dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_oandalik"
                app:layout_constraintStart_toEndOf="@+id/btnnull"
                app:layout_constraintTop_toBottomOf="@+id/btn2" />

            <Button
                android:id="@+id/btn5"
                android:stateListAnimator="@null"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@color/text_color"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn2"
                app:layout_constraintEnd_toStartOf="@+id/btn6"
                app:layout_constraintStart_toEndOf="@+id/btn4"
                app:layout_constraintTop_toBottomOf="@+id/btn8" />

            <Button
                android:id="@+id/btn_oandalik"
                android:layout_width="0dp"
                android:stateListAnimator="@null"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="."
                android:textColor="@color/text_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnber"
                app:layout_constraintStart_toEndOf="@+id/btn0"
                app:layout_constraintTop_toBottomOf="@+id/btn3" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="4"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn1"
                app:layout_constraintEnd_toStartOf="@+id/btn5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn7" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@color/text_color"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn4"
                app:layout_constraintEnd_toStartOf="@+id/btn8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnac" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="1"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btnnull"
                app:layout_constraintEnd_toStartOf="@+id/btn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn4" />

            <Button
                android:id="@+id/btnber"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="35dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/btn_color"
                android:onClick="operator"
                android:text="="
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_oandalik"
                app:layout_constraintTop_toBottomOf="@+id/btntop" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="3"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_oandalik"
                app:layout_constraintEnd_toStartOf="@+id/btntop"
                app:layout_constraintStart_toEndOf="@+id/btn2"
                app:layout_constraintTop_toBottomOf="@+id/btn6" />

            <Button
                android:id="@+id/btnac"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"

                android:onClick="operator"

                android:text="AC"
                android:textColor="@color/button_color_purple"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn7"
                app:layout_constraintEnd_toStartOf="@+id/btnabc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="#00FFFFFF" />

            <Button
                android:id="@+id/btnabc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="±"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn8"
                app:layout_constraintEnd_toStartOf="@+id/btnfaiz"
                app:layout_constraintStart_toEndOf="@+id/btnac"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnbol"
                android:layout_width="0dp"
                android:stateListAnimator="@null"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="operator"
                android:text="÷"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btnvur"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnfaiz"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:textColor="@color/text_color"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btn6"
                app:layout_constraintEnd_toStartOf="@+id/btnvur"
                app:layout_constraintStart_toEndOf="@+id/btn8"
                app:layout_constraintTop_toBottomOf="@+id/btnfaiz" />

            <Button
                android:id="@+id/btnvur"
                android:stateListAnimator="@null"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="operator"
                android:text="X"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btncix"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn9"
                app:layout_constraintTop_toBottomOf="@+id/btnbol" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                android:stateListAnimator="@null"
                app:layout_constraintBottom_toTopOf="@+id/btn5"
                app:layout_constraintEnd_toStartOf="@+id/btn9"
                app:layout_constraintStart_toEndOf="@+id/btn7"
                app:layout_constraintTop_toBottomOf="@+id/btnabc" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="btnset"
                android:text="6"
                android:stateListAnimator="@null"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toTopOf="@+id/btn3"
                app:layout_constraintEnd_toStartOf="@+id/btncix"
                app:layout_constraintStart_toEndOf="@+id/btn5"
                app:layout_constraintTop_toBottomOf="@+id/btn9" />

            <Button
                android:id="@+id/btntop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:stateListAnimator="@null"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/btn_color"
                android:onClick="operator"
                android:text="+"
                android:textColor="@color/button_color_purple"
                android:textSize="24sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btnber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn3"
                app:layout_constraintTop_toBottomOf="@+id/btncix" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/equals_text"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center|end"
        android:paddingRight="30dp"
        android:text="0"
        android:textColor="@color/text_color_ansver"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:gravity="center|right"
        android:paddingRight="30dp"

        android:textColor="@color/text_color_ansver"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/equals_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navi"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/round_corners"
        app:itemIconTint="@drawable/item_sellection"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/dark_light" />

</androidx.constraintlayout.widget.ConstraintLayout>